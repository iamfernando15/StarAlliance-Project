@model IEnumerable<S.A.Models.Flight_Seats>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
	@Html.ActionLink("Registrar", "InsertarFlightSeat")
</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">Información de asientos</h6>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Seat_Location)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Seat_Number)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Assigned_Seats)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Flight.ID_Flight)
						</th>
						<th></th>
					</tr>
				</thead>

				<tbody>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Seat_Location)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Seat_Number)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Assigned_Seats)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Flight.ID_Flight)
							</td>
							<td>
								@Html.ActionLink("Editar", "ActualizarFlightSeat", new { id = item.ID_Seat }) |
								
								@Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Seat })
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>



