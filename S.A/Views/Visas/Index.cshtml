@model IEnumerable<S.A.Models.Visa>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
	@Html.ActionLink("Registrar", "RegistrarVisa")
</p>


<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">Información de visas</h6>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Issuing_Postname)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Control_Number)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Visa_Num)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Visa_Type)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Visa_Class)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Entries)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Annotation)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.IssueDate)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ExpiryDate)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Passenger.Fst_Nombre)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Passport.Passport_Type)
						</th>
						<th></th>
					</tr>
				</thead>

				<tbody>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Issuing_Postname)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Control_Number)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Visa_Num)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Visa_Type)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Visa_Class)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Entries)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Annotation)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.IssueDate)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ExpiryDate)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Passenger.Fst_Nombre)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Passport.Passport_Type)
							</td>
							<td>
								@Html.ActionLink("Editar", "ActualizarVisa", new { id = item.ID_Visa }) |
							
								@Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Visa })
							</td>
						</tr>
					}

				</tbody>
			</table>
		</div>
	</div>
</div>






















