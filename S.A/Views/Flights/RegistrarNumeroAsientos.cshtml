
@{
	ViewBag.Title = "Registrar Número de Asientos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Registrar Número de Asientos</h2>



@using (Html.BeginForm("RegistrarNumeroAsientos", "Flights", FormMethod.Post))
{
	<label for="idFlight">ID del Vuelo:</label>
	<input type="number" id="idFlight" name="idFlight" required>
	<br>
	<label for="totalSeats">Total de Asientos:</label>
	<input type="number" id="totalSeats" name="totalSeats" required>
	<br>
	<button type="submit">Registrar</button>
}

@if (ViewBag.Mensaje != null)
{
	<p>@ViewBag.Mensaje</p>
}
