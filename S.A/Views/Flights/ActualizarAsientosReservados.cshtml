
@{
	ViewBag.Title = "Actualizar Asientos Reservados";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actualizar Asientos Reservados</h2>


@using (Html.BeginForm("ActualizarAsientosReservados", "Flights", FormMethod.Post))
{
	<label for="idFlight">ID del Vuelo:</label>
	<input type="number" id="idFlight" name="idFlight" required>
	<br>
	<button type="submit">Actualizar</button>
}

@if (ViewBag.Mensaje != null)
{
	<p>@ViewBag.Mensaje</p>
}
