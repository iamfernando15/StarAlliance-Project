@model IEnumerable<S.A.Models.Flight_Destination>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
	@Html.ActionLink("Registrar", "InsertarFlightDestination")
</p>


<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">Información de destino de vuelos</h6>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Airport)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Country)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.City)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ZipCode)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Destiny_Price)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ArrivalDate)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Arrival_Time)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Passenger.Fst_Nombre)
						</th>
						<th></th>
					</tr>
				</thead>

				<tbody>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Airport)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Country)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.City)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ZipCode)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Destiny_Price)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ArrivalDate)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Arrival_Time)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Passenger.Fst_Nombre)
							</td>
							<td>
								@Html.ActionLink("Editar", "ActualizarFlightDestination", new { id = item.ID_Destination }) |
							
								@Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Destination })
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>






