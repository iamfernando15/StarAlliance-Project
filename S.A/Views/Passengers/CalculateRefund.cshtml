<!DOCTYPE html>

@{
	ViewBag.Title = "Calcular Reembolso";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("CalculateRefund", "Passengers", FormMethod.Post))
{
	<div class="form-group">
		@Html.Label("ID del Pasajero")
		@Html.TextBox("idPassenger", null, new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.Label("Motivo de Cancelación")
		@Html.TextBox("cancellationReason", null, new { @class = "form-control" })
	</div>
	<button type="submit" class="btn btn-primary">Calcular Reembolso</button>
}

<div>
	@ViewBag.RefundMessage
</div>



